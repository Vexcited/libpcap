{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "module": "ES2020",
    "target": "ES2020",
    "strict": true,
    "allowJs": true,
    "noEmit": true,
    "baseUrl": "./src",
    "paths": {
      "~/*": [
        "*"
      ]
    },
  },
  "include": [
    "src",
    "examples"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}